    "graphql": "^14.5.8",
    "graphql-tag": "^2.10.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-router-dom": "^5.1.2",
    "sanitize.css": "^11.0.0",
    "subscriptions-transport-ws": "^0.9.16",
    "twilio-video": "^2.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.7.5",
    "@emotion/babel-preset-css-prop": "^10.0.27",
    "@lingui/cli": "^2.9.0",
    "@lingui/core": "^2.9.0",
    "@lingui/loader": "^2.9.0",
    "@lingui/macro": "^2.9.0",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/jest": "^24.0.0",
    "@types/lingui__core": "^2.7.0",
    "@types/lingui__macro": "^2.7.3",
    "@types/lingui__react": "^2.8.1",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "@types/twilio-video": "^2.0.10",
    "babel-core": "^7.0.0-bridge.0",
    "customize-cra": "^0.9.1",
    "node-sass": "^4.13.0",
    "react-app-rewired": "^2.1.5",
    "react-scripts": "3.3.0"
  },
  "scripts": {
    "start": "react-app-rewired start",
    "build": "yarn lingui compile && react-app-rewired build",
    "test": "react-app-rewired test",
    "typecheck": "tsc",
    "lint": "yarn --silent lint:code && yarn --silent lint:rest",
    "lint:code": "yarn --silent lint:code:specific .",
    "lint:code:specific": "eslint --format stylish -c ../.prettier.eslintrc.json --ext .js,.jsx,.ts,.tsx",
    "lint:rest": "yarn --silent lint:rest:specific '**/*.{json,md,css,scss,graphql,yml}'",
    "lint:rest:specific": "prettier --check",
    "lint:fix": "yarn --silent lint:code --fix && prettier --write '**/*.{json,md,css,scss,graphql,yml}'",
    "extract": "lingui extract --overwrite --clean && prettier --write './src/locales/**/messages.json'"
  },
  "proxy": "http://localhost:3001",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "snapshotResolver": "./snapshotResolver.js"
  },
  "eslintConfig": {
    "extends": "../.eslintrc.js"
  }
}
