{
  "name": "backend",
  "version": "0.0.1",
  "main": "src/index.ts",
  "author": "Martijn Hols",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "apollo-server-express": "^2.9.16",
    "bcrypt": "^3.0.7",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "express-pino-logger": "^4.0.0",
    "graphql": "^14.5.8",
    "graphql-depth-limit": "^1.1.0",
    "graphql-rate-limit": "^2.0.1",
    "graphql-subscriptions": "^1.1.0",
    "mariadb": "^2.1.5",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^5.21.3",
    "sequelize-typescript": "^1.1.0",
    "validator": "^12.1.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/body-parser": "^1.17.1",
    "@types/express": "^4.17.2",
    "@types/express-pino-logger": "^4.0.2",
    "@types/graphql-depth-limit": "^1.1.2",
    "@types/jest": "^24.9.0",
    "@types/node": "^13.1.8",
    "@types/validator": "^12.0.1",
    "apollo-server-testing": "^2.9.16",
    "dotenv": "^8.2.0",
    "dotenv-expand": "^5.1.0",
    "jest": "^24.9.0",
    "node-mocks-http": "^1.8.1",
    "nodemon": "^2.0.1",
    "sequelize-cli": "^5.5.1",
    "ts-jest": "^24.3.0",
    "ts-node-dev": "^1.0.0-pre.44"
  },
  "scripts": {
    "start": "ts-node-dev --respawn --transpileOnly src/index.ts",
    "build": "tsc --outDir build --noEmit false --sourceMap && (cp .env .env.production build || true)",
    "pretest": "NODE_ENV=test yarn db:migrate",
    "test": "jest .",
    "serve": "NODE_ENV=production node build/index.js",
    "typecheck": "tsc",
    "lint": "yarn --silent lint:code && yarn --silent lint:rest",
    "lint:code": "yarn --silent lint:code:specific .",
    "lint:code:specific": "PRETTIER=true eslint --format stylish --ext .js,.jsx,.ts,.tsx",
    "lint:rest": "yarn --silent lint:rest:specific '**/*.{json,md,css,scss,graphql,yml}'",
    "lint:rest:specific": "prettier --check",
    "lint:fix": "yarn --silent lint:code --fix && prettier --write '**/*.{json,md,css,scss,graphql,yml}'",
    "db:migrate": "yarn build && rm -rf ./build/migrations/*.js.map && yarn sequelize-cli db:migrate"
  },
  "eslintConfig": {
    "extends": "../eslint-config/index.js"
  }
}
